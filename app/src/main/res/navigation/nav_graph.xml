<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gifListFragment">

    <fragment
        android:id="@+id/gifListFragment"
        android:name="com.rahul.gifbrowser.ui.fragments.GifListFragment"
        android:label="fragment_gif_list"
        tools:layout="@layout/fragment_gif_list" >
        <action
            android:id="@+id/action_gifListFragment_to_gifFragment"
            app:destination="@id/gifFragment"

            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/gifFragment"
        android:name="com.rahul.gifbrowser.ui.fragments.GifFragment"
        android:label="fragment_gif"
        tools:layout="@layout/fragment_gif" >
        <argument
            android:name="gifData"
            app:argType="com.rahul.gifbrowser.models.Data"
            app:nullable="true" />
    </fragment>
</navigation>